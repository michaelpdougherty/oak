extends layout

block script
  script(src="/assignments.js")

block layout-content
  div.View.WelcomeView
    h1.Banner #{user.username}
    div.Message.Assignments.Center.hover
      -let c = 0
      each i in user.json
        if user.json[c]["class"] != "Student Meal"
          a(href="/waitForAssignments")
            table.table
              thead(onclick='collapse(this)')
                th(colspan="3")= user.json[c]["class"]
              tbody
                tr
                  td(colspan="3").text-center Fetching assignments...
        - c++
    div.NavButtons
      a(href="/")
        div.NavButton Home
      a(href="/logout")
        div.NavButton Log Out
